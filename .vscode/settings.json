{
  "editor.formatOnSave": true,
  "files.insertFinalNewline": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "jest.coverageFormatter": "GutterFormatter",
  "jest.coverageColors": {
    "uncovered": "rgba(240,150,150,0.2)",
    "covered": "rgba(150,240,240,0.2)",
    "partially-covered": "rgba(240,200,150,0.2)"
  },
  "jest.runMode": {
    "watch": false,
    "onSave": "test-src-file",
    "coverage": true,
    "type": "on-save"
  },
  "jest.rootPath": ".",
}
